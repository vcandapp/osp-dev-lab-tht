---
network_config:
- type: interface
  name: nic1
  use_dhcp: true
  defroute: true
- type: interface
  name: nic2
  use_dhcp: false
  dns_servers: {{ ctlplane_dns_nameservers }}
  addresses:
  - ip_netmask: {{ ctlplane_ip }}/{{ ctlplane_subnet_cidr }}
  routes: {{ [ctlplane_host_routes, [{'default': True, 'next_hop': ctlplane_gateway_ip}]] | flatten | unique }}
- type: vlan
  vlan_id: {{ internal_api_vlan_id }}
  device: nic2
  addresses:
  - ip_netmask: {{ internal_api_ip }}/{{ internal_api_cidr }}
- type: vlan
  vlan_id: {{ storage_vlan_id }}
  device: nic2
  addresses:
  - ip_netmask: {{ storage_ip }}/{{ storage_cidr }}
- type: vlan
  vlan_id: {{ tenant_vlan_id }}
  device: nic2
  addresses:
  - ip_netmask: {{ tenant_ip }}/{{ tenant_cidr }}
- type: sriov_pf
  name: nic3
  use_dhcp: false
  numvfs: 5
- type: sriov_pf
  name: nic4
  use_dhcp: false
  numvfs: 5
